#!/usr/bin/env ruby

$: << File.join(File.dirname(__FILE__), '..', 'lib')

require "console/console"
require "core/players/players"
require "core/players/player_symbol"
require "core/board"
require "core/game"

console = Console.new(input: $stdin, output: $stdout)
players = Players.new(PlayerSymbol.new(:X), PlayerSymbol.new(:O))
board   = Board.new(3)
game    = Game.new(board: board, players: players, ui: console)

game.play
