#!/usr/bin/env ruby

$: << File.join(File.dirname(__FILE__), '..', 'lib')

require "console/console"
require "console/console_io"
require "core/players/players"
require "core/players/player"
require "core/board"
require "core/game"

io      = ConsoleIO.new(input: $stdin, output: $stdout)
console = Console.new(io)
players = Players.new(Player.new(:X), Player.new(:O))
board   = Board.new
game    = Game.new(board: board, players: players, ui: console)

game.play
